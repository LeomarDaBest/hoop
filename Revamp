-- Optional: Enable Secure Mode to reduce detection
getgenv().SecureMode = true

-- Load Rayfield Library
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

-- Create Main Window
local Window = Rayfield:CreateWindow({
    Name = "Phantom.cc",
    LoadingTitle = "Loading Phantom.cc",
    LoadingSubtitle = "by HOOPZ",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "PhantomConfigs", -- Custom folder for configurations
        FileName = "PhantomSettings"
    },
    Discord = {
        Enabled = true,
        Invite = "getphantom", -- Discord invite code
        RememberJoins = false
    },
    KeySystem = false, -- Set to true to enable key system
    KeySettings = {
        Title = "Phantom.cc Key System",
        Subtitle = "Enter your access key",
        Note = "Join our Discord (getphantom) for the key",
        FileName = "PhantomKey",
        SaveKey = true,
        GrabKeyFromSite = false,
        Key = {"your-key-here"} -- Replace with your actual key(s)
    }
})

-- Create Tabs
local ShootingTab = Window:CreateTab("Shooting", 1234567890) -- Replace with actual asset ID for icon
local MovementTab = Window:CreateTab("Movement", 1234567891)
local MiscTab = Window:CreateTab("Misc", 1234567892)

-- Shooting Tab Elements
local CamlockEnabled = false
ShootingTab:CreateToggle({
    Name = "Enable Camlock",
    CurrentValue = CamlockEnabled,
    Flag = "CamlockToggle",
    Callback = function(Value)
        CamlockEnabled = Value
        -- Add your Camlock enabling/disabling logic here
    end,
})

ShootingTab:CreateSlider({
    Name = "Camlock Smoothness",
    Range = {0, 100},
    Increment = 1,
    Suffix = "%",
    CurrentValue = 50,
    Flag = "CamlockSmoothness",
    Callback = function(Value)
        -- Update Camlock smoothness setting
    end,
})

-- Movement Tab Elements
local SpeedEnabled = false
MovementTab:CreateToggle({
    Name = "Enable Speed Hack",
    CurrentValue = SpeedEnabled,
    Flag = "SpeedHackToggle",
    Callback = function(Value)
        SpeedEnabled = Value
        -- Add your speed hack logic here
    end,
})

MovementTab:CreateSlider({
    Name = "Speed Multiplier",
    Range = {1, 10},
    Increment = 0.1,
    Suffix = "x",
    CurrentValue = 1,
    Flag = "SpeedMultiplier",
    Callback = function(Value)
        -- Update speed multiplier
    end,
})

-- Misc Tab Elements
MiscTab:CreateButton({
    Name = "Reset Settings",
    Callback = function()
        Rayfield:ResetConfiguration()
    end,
})

MiscTab:CreateParagraph({
    Title = "About Phantom.cc",
    Content = "Phantom.cc is a powerful tool designed to enhance your gaming experience. Join our Discord for updates and support."
})

-- Load Saved Configuration
Rayfield:LoadConfiguration()
