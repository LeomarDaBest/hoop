-- Hoopz Aimbot GUI
-- This script creates a GUI with an aimbot feature for the Roblox game Hoopz

-- Retrieve the necessary game objects
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local HoopzGame = game:GetService("Workspace"):WaitForChild("Hoopz")
local Ball = HoopzGame:WaitForChild("Ball")
local Basket = HoopzGame:WaitForChild("Basket")

-- Create the GUI
local AimbotGUI = Instance.new("ScreenGui")
AimbotGUI.Name = "AimbotGUI"
AimbotGUI.Parent = LocalPlayer:WaitForChild("PlayerGui")

local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Size = UDim2.new(0.3, 0, 0.3, 0)
MainFrame.Position = UDim2.new(0.35, 0, 0.35, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
MainFrame.Parent = AimbotGUI

local TitleLabel = Instance.new("TextLabel")
TitleLabel.Name = "TitleLabel"
TitleLabel.Text = "Hoopz Aimbot"
TitleLabel.Size = UDim2.new(0.8, 0, 0.2, 0)
TitleLabel.Position = UDim2.new(0.1, 0, 0.1, 0)
TitleLabel.BackgroundTransparency = 1
TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
TitleLabel.Font = Enum.Font.SourceSansBold
TitleLabel.TextSize = 24
TitleLabel.Parent = MainFrame

local AimbotToggle = Instance.new("TextButton")
AimbotToggle.Name = "AimbotToggle"
AimbotToggle.Text = "Toggle Aimbot"
AimbotToggle.Size = UDim2.new(0.8, 0, 0.2, 0)
AimbotToggle.Position = UDim2.new(0.1, 0, 0.4, 0)
AimbotToggle.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
AimbotToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
AimbotToggle.Font = Enum.Font.SourceSans
AimbotToggle.TextSize = 18
AimbotToggle.Parent = MainFrame

local AimbotActive = false

AimbotToggle.MouseButton1Click:Connect(function()
    AimbotActive = not AimbotActive
    if AimbotActive then
        AimbotToggle.Text = "Aimbot Active"
        AimbotToggle.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
        -- Aimbot logic
        while AimbotActive do
            local BallPosition = Ball.Position
            local BasketPosition = Basket.Position
            local ShootDirection = (BasketPosition - BallPosition).Unit
            Ball:SetAttribute("Velocity", ShootDirection * 100) -- Adjust power as needed
            wait()
        end
    else
        AimbotToggle.Text = "Toggle Aimbot"
        AimbotToggle.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    end
end)
